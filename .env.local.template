# ===========================
# REQUIRED: Groq API (Primary LLM Provider)
# ===========================
# Get your free API key at: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# LLM Models (Optional - defaults shown)
LLM_MODEL_SCORING=llama-3.3-70b-versatile
LLM_MODEL_QUESTIONS=llama-3.1-8b-instant

# ===========================
# REQUIRED: Firebase Configuration
# ===========================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-side)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# ===========================
# OPTIONAL: Premium UK Tier (Claude)
# ===========================
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# USE_PREMIUM_UK=false

# ===========================
# OPTIONAL: Fallback Providers
# ===========================
# Gemini (fallback if Groq unavailable)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# OpenRouter (secondary fallback)
# OPENROUTER_API_KEY=your_openrouter_api_key_here

# ===========================
# AssemblyAI (Speech Recognition)
# ===========================
NEXT_PUBLIC_ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# ===========================
# Optional: Site Configuration
# ===========================
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================
# Cloudinary (Image Storage for Branding)
# ===========================
# Get your credentials at: https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_unsigned_upload_preset
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
